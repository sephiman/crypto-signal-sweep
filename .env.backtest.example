# BACKTEST MODE CONFIGURATION
# Copy this file to .env and configure for backtesting

# =============================================================================
# BACKTEST SETTINGS
# =============================================================================
BACKTEST_MODE=true
BACKTEST_START_DATE=2024-01-01
BACKTEST_END_DATE=2024-12-31

# Set to true ONLY on first run to collect historical data
# After data is collected, set to false to skip re-downloading
COLLECT_HISTORICAL_DATA=true

# =============================================================================
# TRADING PAIRS & TIMEFRAMES
# =============================================================================
PAIRS=BTC/USDT,ETH/USDT,SOL/USDT,BNB/USDT,SUI/USDT,ONDO/USDT,ADA/USDT,XRP/USDT,LINK/USDT,AVAX/USDT,TON/USDT,OP/USDT,ARB/USDT,UNI/USDT,TRUMP/USDT,WIF/USDT,PEPE/USDT,XLM/USDT,RNDR/USDT,WLFI/USDT,TAO/USDT,HBAR/USDT
TIMEFRAMES=15m,1h,4h

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_ENABLED=true
DB_HOST=localhost
DB_PORT=5432
DB_NAME=crypto_signals
DB_USER=your_username
DB_PASSWORD=your_password

# =============================================================================
# STRATEGY PARAMETERS (same as live trading)
# =============================================================================

# Technical Indicators
RSI_PERIOD=14
RSI_OVERSOLD=35
RSI_OVERBOUGHT=65
RSI_MOMENTUM=50

MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9
MACD_MIN_DIFF=0.8
MACD_MIN_DIFF_ENABLED=true

EMA_FAST=9
EMA_SLOW=21
EMA_MIN_DIFF_ENABLED=true

ATR_PERIOD=14
ATR_SL_MULTIPLIER=1.2
ATR_TP_MULTIPLIER=2.4

ADX_PERIOD=14
ADX_THRESHOLD=28
ADX_RSI_MODE=adx

# Stochastic Oscillator
STOCH_ENABLED=true
STOCH_K_PERIOD=14
STOCH_D_PERIOD=3
STOCH_OVERSOLD=30
STOCH_OVERBOUGHT=70

# Bollinger Bands
BB_ENABLED=true
BB_PERIOD=20
BB_STD_DEV=2.0
BB_WIDTH_MIN=0.02

# Filters
USE_HIGHER_TF_CONFIRM=true
USE_TREND_FILTER=true
TREND_MA_PERIOD=21
REQUIRED_MA_BARS=2

VOLUME_CONFIRMATION_ENABLED=true
MIN_ATR_RATIO=0.005

# Time filter (disabled in backtest mode by default, but configurable)
TIME_FILTER_ENABLED=false
TIME_FILTER_TIMEZONE=Europe/Paris
AVOID_HOURS_START=0
AVOID_HOURS_END=7

# Scoring
DYNAMIC_SCORE_ENABLED=true
MIN_SCORE_DEFAULT=5
MIN_SCORE_TRENDING=5
MIN_SCORE_RANGING=5

# =============================================================================
# TELEGRAM (Optional - set if you want notifications during backtest)
# =============================================================================
TELEGRAM_TOKEN=
TELEGRAM_CHAT_ID=

# =============================================================================
# OTHER SETTINGS
# =============================================================================
RUN_AT_START=false
SEND_UNCONFIRMED=false
MARKET_SUMMARY_ENABLED=false
